<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:id="@+id/rl_coursefragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/ll_course"
        android:background="#ffffff">

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_title"
            android:layout_margin="7dp"
            android:background="@drawable/bg_search"
            android:onClick="click"
            android:gravity="center"
            android:text="添加课程"
            android:textSize="10dp"
            android:textColor="#808080"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_course_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你还没有选择任何课程哦，请添加"
        android:textSize="18dp"
        android:layout_below="@+id/lv_course"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="247dp" />

    <widget.SwipeListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lv_course"
        android:layout_below="@id/ll_course"
        android:dividerHeight="1dp"
        ></widget.SwipeListView>

</RelativeLayout>
