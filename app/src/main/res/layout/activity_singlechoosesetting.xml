<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/rl_singlechoosesetting_top"
        android:background="#FFD33B32">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单选设置"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <RelativeLayout
            android:id="@+id/rl_singlechoosesetting_back"
            android:layout_width="40dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_back"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_singlechoosesetting_count"
        android:layout_below="@id/rl_singlechoosesetting_top"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="30dp">
        <TextView
            android:id="@+id/tv_singlechoosesetting_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="选择题目数量："
            android:textSize="19dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="40dp"
            />

        <RadioGroup
            android:id="@+id/rg_singlechoosesetting_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_toRightOf="@id/tv_singlechoosesetting_count">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:layout_marginRight="10dp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:layout_marginLeft="10dp"/>
        </RadioGroup>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_singlechoosesetting_hard"
        android:layout_below="@id/rl_singlechoosesetting_count"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/tv_singlechoosesetting_hard"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="选择题目难度："
            android:textSize="19dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="40dp"
            />

        <RadioGroup
            android:id="@+id/rg_singlechoosesetting_hard"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_toRightOf="@id/tv_singlechoosesetting_hard">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一颗星"
                android:layout_marginRight="10dp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="二颗星"/>
        </RadioGroup>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="40dp"
        android:text="(一颗星：期末考试难度         二颗星：考研难度)"/>

    <Button
        android:id="@+id/btn_singlechoosesetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始"
        android:textColor="#000000"
        android:textSize="17dp"
        android:background="@drawable/bg_btn_exit"
        android:layout_below="@+id/rl_singlechoosesetting_hard"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#FFD8D8D8"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_test_info_alert"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:textSize="18dp"/>
        <ListView
            android:layout_marginTop="8dp"
            android:layout_below="@id/tv_test_info_alert"
            android:id="@+id/lv_test_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ListView>
    </RelativeLayout>

</LinearLayout>

